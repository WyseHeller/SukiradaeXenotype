<?xml version="1.0" encoding="UTF-8"?>
<Patch>
	<!-- Core -->
	<Operation Class="XmlExtensions.HybridPatch">
		<xpath>Defs/FactionDef[defName="TribeSavage"]</xpath>
		<value>
			<xenotypeSet Operation="Safe">
				<xenotypeChances Operation="Safe">
					<WH_Sukiradae Operation="Add">0.0125</WH_Sukiradae> <!-- 0.25x Default Xenotype Spawn Rate (0.05) -->
				</xenotypeChances>
			</xenotypeSet>
		</value>
	</Operation>
	
	<!-- DLC -->
	<Operation Class="XmlExtensions.HybridPatch">
		<xpath>Defs/PawnKindDef[@Name="HoraxianBase"]/xenotypeSet/xenotypeChances</xpath>
		<value>
			<WH_Sukiradae Operation="Add">0.05</WH_Sukiradae> <!-- 1x Default Xenotype Spawn Rate (0.05) -->
		</value>
	</Operation>
	<Operation Class="XmlExtensions.HybridPatch">
		<xpath>Defs/PawnKindDef[@Name="MutantBase"]/xenotypeSet/xenotypeChances</xpath>
		<value>
			<WH_Sukiradae Operation="Add">0.05</WH_Sukiradae> <!-- 1x Default Xenotype Spawn Rate (0.05) -->
		</value>
	</Operation>
</Patch>