<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<PawnKindDef ParentName="TribalBase" Name="WH_SukiradaeBase" Abstract="True">
		<defaultFactionDef>WH_SukiradaeTribe</defaultFactionDef>
		<chemicalAddictionChance>0</chemicalAddictionChance>
		<apparelRequired>
			<li>Apparel_WarMask</li>
		</apparelRequired>
		<apparelTags>
			<li>IndustrialBasic</li>
		</apparelTags>
		<techHediffsTags>
			<li>Simple</li>
		</techHediffsTags>
		<techHediffsMoney>200~800</techHediffsMoney>
		<techHediffsChance>0.08</techHediffsChance>
	</PawnKindDef>

	<!-- Poverty Tier -->
	
	<PawnKindDef ParentName="WH_SukiradaeBase" Name="WH_SukiradaePovertyTierBase" Abstract="True">
		<combatPower>40</combatPower>
		<itemQuality>Poor</itemQuality>
		<weaponTags>
			<li>MedievalMeleeBasic</li>
		</weaponTags>
		<weaponMoney>100~200</weaponMoney> <!-- Knife {Steel~Obsidian} $64~$160 -->
		<apparelMoney>200~650</apparelMoney> <!-- Full Outfit $155~$601 -->
		<initialWillRange>0~1</initialWillRange>
		<initialResistanceRange>10~17</initialResistanceRange>
	</PawnKindDef>
	
	<PawnKindDef ParentName="WH_SukiradaePovertyTierBase">
		<defName>WH_Sukiradae_Villager</defName>
		<label>villager</label>
		<isFighter>false</isFighter>
	</PawnKindDef>
	
	<PawnKindDef ParentName="WH_SukiradaePovertyTierBase">
		<defName>WH_Sukiradae_Porter</defName>
		<label>slave</label>
		<isFighter>true</isFighter>
		<apparelRequired>
			<li MayRequire="Ludeon.Rimworld.Ideology">Apparel_Collar</li>
		</apparelRequired>
		<requiredWorkTags>
			<li>Violent</li>
		</requiredWorkTags>
	</PawnKindDef>
	
	<!-- Low Tier -->
	
	<PawnKindDef ParentName="WH_SukiradaePovertyTierBase" Name="WH_SukiradaeLowTierBase" Abstract="True">
		<isFighter>true</isFighter>
		<maxGenerationAge>20</maxGenerationAge>
		<gearHealthRange>0.5~1.8</gearHealthRange>
		<weaponTags Inherit="False"/>
		<requiredWorkTags>
			<li>Violent</li>
		</requiredWorkTags>
		<inventoryOptions>
			<skipChance>0.80</skipChance>
			<subOptionsChooseOne>
				<li>
					<thingDef>MedicineHerbal</thingDef>
					<countRange>1</countRange>
				</li>
			</subOptionsChooseOne>
		</inventoryOptions>
		<initialWillRange>1~3</initialWillRange>
		<initialResistanceRange>17~27</initialResistanceRange>
	</PawnKindDef>
	
	<PawnKindDef ParentName="WH_SukiradaeLowTierBase">
		<defName>WH_Sukiradae_Fighter</defName>
		<label>fighter</label>
		<combatPower>50</combatPower>
		<canBeSapper>true</canBeSapper>
		<weaponTags>
			<li>NeolithicMeleeBasic</li>
			<li>NeolithicMeleeDecent</li>
		</weaponTags>
		<weaponMoney>150~300</weaponMoney> <!-- Club/Ikwa {Obsidian} $205/$275 -->
	</PawnKindDef>
	
	<PawnKindDef ParentName="WH_SukiradaeLowTierBase">
		<defName>WH_Sukiradae_Archer</defName>
		<label>archer</label>
		<combatPower>45</combatPower>
		<weaponTags>
			<li>NeolithicRangedBasic</li>
			<li>NeolithicRangedDecent</li>
			<li>NeolithicRangedHeavy</li>
		</weaponTags>
		<weaponMoney>50~150</weaponMoney> <!-- Short Bow/Pila $45/$109 -->
		<disallowedTraits>
			<li>Brawler</li>
		</disallowedTraits>
	</PawnKindDef>
	
	<!-- Mid Tier -->
	
	<PawnKindDef ParentName="WH_SukiradaeLowTierBase" Name="WH_SukiradaeMidTierBase" Abstract="True">
		<minGenerationAge>20</minGenerationAge>
		<maxGenerationAge>65</maxGenerationAge>
	</PawnKindDef>
	
	<PawnKindDef ParentName="WH_SukiradaeMidTierBase">
		<defName>WH_Sukiradae_Warrior</defName>
		<label>warrior</label>
		<combatPower>65</combatPower>
		<canBeSapper>true</canBeSapper>
		<weaponTags>
			<li>Spear</li>
		</weaponTags>
		<weaponMoney>200~880</weaponMoney> <!-- Spear {Steel~Plasteel} $186~$770 -->
