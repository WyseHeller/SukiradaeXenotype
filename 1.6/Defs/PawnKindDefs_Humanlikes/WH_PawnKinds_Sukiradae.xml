			<li>Brawler</li>
		</disallowedTraits>
		<initialWillRange>2~4</initialWillRange>
		<initialResistanceRange>10~16</initialResistanceRange>
	</PawnKindDef>
	
	<PawnKindDef ParentName="WH_Sukiradae_Militia">
		<defName>WH_Sukiradae_Trader</defName>
		<label>trader</label>
		<trader>true</trader>
		<isFighter>false</isFighter>
		<apparelRequired Inherit="False">
			<li>Apparel_CowboyHat</li>
		</apparelRequired>
		<initialWillRange>2~4</initialWillRange>
		<initialResistanceRange>9~15</initialResistanceRange>
	</PawnKindDef>
	
	<!-- High Tier -->
	
	<PawnKindDef ParentName="WH_SukiradaeMidTierBase" Name="WH_SukiradaeHighTierBase" Abstract="True">
