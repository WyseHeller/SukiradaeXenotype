		<weaponMoney>300~550</weaponMoney> <!-- Plasteel Knife $285 ~ Plasteel Axe $505 -->
		<apparelTags>
			<li>IndustrialMilitaryBasic</li>
			<li>Cape</li>
		</apparelTags>
		<apparelRequired Inherit="False">
			<li>Apparel_CowboyHat</li>
		</apparelRequired>
