		<initialResistanceRange>5~9</initialResistanceRange>
	</PawnKindDef>
	
	<PawnKindDef ParentName="WH_SukiradaeMidTierBase" Name="WH_Sukiradae_Militia">
		<defName>WH_Sukiradae_Militia</defName>
		<label>militia</label>
		<combatPower>75</combatPower>
		<canBeSapper>true</canBeSapper>
		<apparelColor>(129, 97, 60)</apparelColor> <!-- Coyote Brown -->
