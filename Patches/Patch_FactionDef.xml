<?xml version="1.0" encoding="UTF-8"?>
<Patch>
	<!-- Core -->
	<Operation Class="XmlExtensions.HybridPatch">
		<xpath>Defs/FactionDef[defName="TribeSavage"]</xpath>
		<value>
			<xenotypeSet Operation="Safe">
				<xenotypeChances Operation="Safe">
					<WH_Sukiradae Operation="Add">0.0125</WH_Sukiradae>
				</xenotypeChances>
			</xenotypeSet>
		</value>
	</Operation>
	<Operation Class="XmlExtensions.HybridPatch">
		<xpath>Defs/FactionDef[defName="Pirate"]/xenotypeSet/xenotypeChances</xpath>
		<value>
			<WH_Sukiradae Operation="Add">0.0125</WH_Sukiradae>
		</value>
	</Operation>
	
	<!-- DLC -->
	<Operation Class="XmlExtensions.HybridPatch">
		<xpath>Defs/PawnKindDef[@Name="HoraxianBase"]/xenotypeSet/xenotypeChances</xpath>
		<value>
			<WH_Sukiradae Operation="Add">0.05</WH_Sukiradae>
		</value>
	</Operation>
	<Operation Class="XmlExtensions.HybridPatch">
