			<WH_Sukiradae Operation="Add">0.05</WH_Sukiradae>
		</value>
	</Operation>
	
	<Operation Class="XmlExtensions.FindMod">
		<mods><li>Ideology</li></mods>
		<caseTrue>
			<Operation Class="XmlExtensions.HybridPatch">
				<xpath>Defs/FactionDef[defName="Beggars"]/xenotypeSet/xenotypeChances</xpath>
				<value>
					<WH_Sukiradae Operation="Add">0.0125</WH_Sukiradae>
				</value>
			</Operation>
			<Operation Class="XmlExtensions.HybridPatch">
				<xpath>Defs/FactionDef[defName="TribeCannibal"]</xpath>
				<value>
					<xenotypeSet Operation="Safe">
						<xenotypeChances Operation="Safe">
							<WH_Sukiradae Operation="Add">0.0125</WH_Sukiradae>
						</xenotypeChances>
					</xenotypeSet>
				</value>
			</Operation>
			<Operation Class="XmlExtensions.HybridPatch">
				<xpath>Defs/FactionDef[defName="NudistTribe"]</xpath>
				<value>
					<xenotypeSet Operation="Safe">
						<xenotypeChances Operation="Safe">
							<WH_Sukiradae Operation="Add">0.0125</WH_Sukiradae>
						</xenotypeChances>
					</xenotypeSet>
				</value>
			</Operation>
			<Operation Class="XmlExtensions.HybridPatch">
				<xpath>Defs/FactionDef[defName="CannibalPirate"]</xpath>
				<value>
					<xenotypeSet Operation="Safe">
						<xenotypeChances Operation="Safe">
							<WH_Sukiradae Operation="Add">0.025</WH_Sukiradae>
						</xenotypeChances>
					</xenotypeSet>
				</value>
			</Operation>
			<Operation Class="XmlExtensions.HybridPatch">
				<xpath>Defs/FactionDef[defName="Pilgrims"]/xenotypeSet/xenotypeChances</xpath>
				<value>
					<WH_Sukiradae Operation="Add">0.0125</WH_Sukiradae>
				</value>
			</Operation>
		</caseTrue>
	</Operation>
	
	<!-- Mods -->
	<Operation Class="XmlExtensions.FindMod">
		<mods><li>Vanilla Xenotypes Improved</li></mods>
		<caseTrue>
			<Operation Class="XmlExtensions.HybridPatch">
				<xpath>Defs/FactionDef[defName="MulticulturalPirates"]/xenotypeSet/xenotypeChances</xpath>
				<value>
					<WH_Sukiradae Operation="Add">0.0125</WH_Sukiradae>
